<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Organiser Home - Auction Gala Planner</title>
  <link rel="icon" href="/favicon.ico">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body class="bg-gray-50 text-gray-800">
  <nav class="bg-white shadow">
    <div class="container mx-auto px-4 py-3 flex space-x-4">
      <a href="/" class="font-semibold hover:text-blue-600">Home</a>
      <a href="/organiser" class="hover:text-blue-600">Organiser</a>
      <a href="/organiser/bookings" class="hover:text-blue-600">Bookings</a>
      <a href="/attendee" class="hover:text-blue-600">Attendee</a>
    </div>
  </nav>

  <main class="container mx-auto px-4 py-6">
    <h1 class="text-3xl font-bold mb-4">Organiser Home Page</h1>
    <h2 class="text-2xl font-semibold"><%= settings.name %></h2>
    <p class="text-gray-600 mb-6"><%= settings.description %></p>

    <div class="flex flex-wrap gap-4 mb-6">
      <a href="/organiser/settings"
         class="px-4 py-2 bg-yellow-400 text-white rounded hover:bg-yellow-500 transition flex items-center">
        <i class="fas fa-cog mr-2"></i>
        Site Settings
      </a>
      
      <button id="create-event"
              class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition flex items-center">
        <i class="fas fa-plus mr-2"></i>
        Create New Event
      </button>
      
      <a href="/organiser/bookings"
         class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition flex items-center">
        <i class="fas fa-list mr-2"></i>
        View All Bookings
      </a>
      
      <a href="/organiser/dashboard"
         class="px-4 py-2 bg-purple-500 text-white rounded hover:bg-purple-600 transition flex items-center">
        <i class="fas fa-chart-pie mr-2"></i>
        Analytics Dashboard
      </a>
    </div>

    <div class="md:flex md:space-x-6">
      <!-- Published -->
      <section class="md:w-1/2 mb-8 md:mb-0">
        <h3 class="text-xl font-semibold mb-3 flex items-center">
          <i class="fas fa-calendar-check mr-2 text-green-500"></i>
          Published Events
        </h3>
        <% if (published.length === 0) { %>
          <p class="text-gray-500 italic">No published events yet.</p>
        <% } else { %>
          <div class="space-y-4">
            <% published.forEach(event => { %>
              <div class="bg-white p-4 rounded-lg shadow border-l-4 border-green-500">
                <h4 class="font-semibold text-lg"><%= event.title %></h4>
                <p class="text-gray-600 text-sm mb-2"><%= event.description %></p>
                <p class="text-sm text-gray-500 mb-3">
                  <i class="fas fa-calendar mr-1"></i>
                  <%= new Date(event.event_date).toLocaleDateString() %>
                </p>
                <div class="flex space-x-2">
                  <a href="/organiser/events/<%= event.id %>/edit"
                     class="px-3 py-1 bg-blue-500 text-white text-sm rounded hover:bg-blue-600 transition">
                    <i class="fas fa-edit mr-1"></i>
                    Edit
                  </a>
                  <button onclick="deleteEvent(<%= event.id %>)"
                          class="px-3 py-1 bg-red-500 text-white text-sm rounded hover:bg-red-600 transition">
                    <i class="fas fa-trash mr-1"></i>
                    Delete
                  </button>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </section>

      <!-- Drafts -->
      <section class="md:w-1/2">
        <h3 class="text-xl font-semibold mb-3 flex items-center">
          <i class="fas fa-file-alt mr-2 text-orange-500"></i>
          Draft Events
        </h3>
        <% if (drafts.length === 0) { %>
          <p class="text-gray-500 italic">No draft events.</p>
        <% } else { %>
          <div class="space-y-4">
            <% drafts.forEach(event => { %>
              <div class="bg-white p-4 rounded-lg shadow border-l-4 border-orange-500">
                <h4 class="font-semibold text-lg">
                  <%= event.title || '(Untitled Draft)' %>
                </h4>
                <% if (event.description) { %>
                  <p class="text-gray-600 text-sm mb-2"><%= event.description %></p>
                <% } %>
                <p class="text-sm text-gray-500 mb-3">
                  <i class="fas fa-clock mr-1"></i>
                  Created <%= new Date(event.created_at).toLocaleDateString() %>
                </p>
                <div class="flex space-x-2">
                  <a href="/organiser/events/<%= event.id %>/edit"
                     class="px-3 py-1 bg-blue-500 text-white text-sm rounded hover:bg-blue-600 transition">
                    <i class="fas fa-edit mr-1"></i>
                    Edit
                  </a>
                  <% if (event.title && event.description && event.event_date) { %>
                    <button onclick="publishEvent(<%= event.id %>)"
                            class="px-3 py-1 bg-green-500 text-white text-sm rounded hover:bg-green-600 transition">
                      <i class="fas fa-rocket mr-1"></i>
                      Publish
                    </button>
                  <% } %>
                  <button onclick="deleteEvent(<%= event.id %>)"
                          class="px-3 py-1 bg-red-500 text-white text-sm rounded hover:bg-red-600 transition">
                    <i class="fas fa-trash mr-1"></i>
                    Delete
                  </button>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </section>
    </div>
  </main>

  <footer class="text-center py-6 text-sm text-gray-500">
    Â© 2025 Auction Gala Planner
  </footer>

  <script>
    // Create new event
    document.getElementById('create-event').addEventListener('click', async () => {
      try {
        const response = await axios.post('/organiser/events/new');
        if (response.data.success) {
          window.location.href = `/organiser/events/${response.data.id}/edit`;
        }
      } catch (error) {
        console.error('Error creating event:', error);
        alert('Failed to create event. Please try again.');
      }
    });

    // Publish event
    async function publishEvent(eventId) {
      if (!confirm('Are you sure you want to publish this event?')) return;
      
      try {
        const response = await axios.post(`/organiser/events/${eventId}/publish`);
        if (response.data.success) {
          location.reload();
        }
      } catch (error) {
        console.error('Error publishing event:', error);
        alert('Failed to publish event. Please try again.');
      }
    }

    // Delete event
    async function deleteEvent(eventId) {
      if (!confirm('Are you sure you want to delete this event? This action cannot be undone.')) return;
      
      try {
        const response = await axios.delete(`/organiser/events/${eventId}`);
        if (response.data.success) {
          location.reload();
        }
      } catch (error) {
        console.error('Error deleting event:', error);
        alert('Failed to delete event. Please try again.');
      }
    }
  </script>
</body>
</html>